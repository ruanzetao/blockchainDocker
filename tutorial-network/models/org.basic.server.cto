import org.basic.server.enums.*

/**
Asset for chaincode
 */

asset HealthRecord identified by healthRecordId {
  o String healthRecordId
  o String cp
  o String trestbps
  o String chol
  o String fbs
  o String restecg
  o String thalach
  o String exang
  o String oldpeak
  o String slope
  o String ca 
  o String thal 
  o String target
  o String status
  --> Person [] approval
}
/**
 * An abstract participant type in this business network
 */
abstract participant  Person identified by personId {
  o String personId
  o String name
  o String address
  o String email
  o String phone
  o String type
  o String sex
  o DateTime createAt
  o DateTime updateAt optional
 }


participant Doctor extends Person {

}

participant Patient extends Person{

}

asset Request identified by requestId {
  o String requestId
  o Role requesterRole
  o Role resourceOwnerRole
  o ResourceType resourceType
  o String resourceId

  // o String idRequester
  // o String idResourceOwner

  --> Person owner
  --> Person resourceOwner
}

/**
Asset of Doctor
 */

asset DoctorInfo identified by doctorInfoId {
  o String doctorInfoId
  o String doctorId
  o String name
  o String address
  o String email
  o String phone
  o String type
  o String sex
  o DateTime createAt
  o DateTime updateAt optional
  o String specialist
  --> Patient[] authorizedPatients
  --> Doctor owner
}

asset DoctorProfile identified by doctorProfileId{
  o String doctorProfileId
  o String participantId
  o Role role
  o String avatar default="default"
  o DateTime createAt
  o DateTime updateAt
  --> Doctor owner
}


/**
Asset of patient
 */
 asset PatientInfo identified by patientInfoId {
  o String patientInfoId
  o String patientId
  o String name
  o String address
  o String email
  o String phone
  o String type
  o String sex
  o DateTime createAt
  o DateTime updateAt optional
  o String specialist
  --> Doctor[] authorizedDoctors
  --> Patient owner
}

asset PatientProfile identified by patientProfileId{
  o String patientProfileId
  o String participantId
  o Role role
  o String avatar default="default"
  o DateTime createAt
  o DateTime updateAt
  --> Patient owner
}


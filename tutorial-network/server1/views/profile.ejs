    <!--================Header Menu Area =================-->
    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="wrapper wrapper--w780">
            <div class="card card-3">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title">User Info</h2>
                    
                    <form method="POST" id="formprofile" name="formprofile">                
                        <div class="input-group">
                            <input id="name" class="input--style-3" type="name" placeholder="Name" name="name" disabled value=<%=data.name%>>
                        </div>
                        <div class="input-group">
                            <input id="address" class="input--style-3" type="address" placeholder="Address" name="address" disabled value=<%=data.address%>>
                        </div>
                        <div class="input-group">
                                <input id="email" class="input--style-3" type="email" placeholder="Email" name="email" disabled value=<%=data.email%>>
                            </div> 
                        <div class="input-group">
                            <input id="phone" class="input--style-3" type="phone" placeholder="Phone" name="phone" disabled value=<%=data.phone%>>
                        </div>
                        <div class="input-group">
                                <input id="identityCardNumber" class="input--style-3" type="identityCardNumber" placeholder="Identity Card Number" name="identityCardNumber" disabled value=<%=data.identityCardNumber%>>
                            </div> 
                        <div class="input-group">
                            <input id="sex" class="input--style-3" type="sex" placeholder="Male/Female/Other" name="sex" disabled value=<%=data.sex%>>
                        </div>
                        <div class="input-group">
                            <input id="specialist" class="input--style-3" type="specialist" placeholder="Specialist" name="specialist" disabled value=<%=data.specialist%>>
                        </div>
                        <div class="input-group">
                            <input id="marriageStatus" class="input--style-3" type="marriageStatus" placeholder="marriageStatus" name="marriageStatus" disabled value=<%=data.marriageStatus%>>
                        </div>
                        <div class="input-group">
                            <input id="tittle" class="input--style-3" type="tittle" placeholder="Tittle" name="tittle" disabled value=<%=data.tittle%>>
                        </div>
                        <div class="p-t-10" style="text-align: center;">
                            <a href="javascript:void(0);" id="edit" onclick="editFunction()" class="btn btn--pill btn--green">Edit</a>
                            <button id="save" class="btn btn--pill btn--green" type="save" name="save" href="/adddoctorinfo">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/global.js"></script>

    <script>
        function editFunction(){            
            document.getElementById("name").disabled=false;
            document.getElementById("address").disabled=false;
            document.getElementById("email").disabled=false;
            document.getElementById("phone").disabled=false;
            document.getElementById("identityCardNumber").disabled=false;
            document.getElementById("sex").disabled=false;
            document.getElementById("specialist").disabled=false;
            document.getElementById("marriageStatus").disabled=false;
            document.getElementById("tittle").disabled=false;
        }
    </script>



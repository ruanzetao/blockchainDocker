    <div class="body">
        <div class="container">
            <div class="requestForm">
                <h3 class="table-label">Be Requested</h3>
                <% if(data.berequest){ %>
                <table>
                    <tr>
                        <th>Request ID</th>
                        <th>Requester Role</th>
                        <th>Resource Owner Role</th>
                        <th>Resource Type</th>
                        <th>Resource ID</th>
                        <th>Requester ID</th>
                        <th>Resource Owner ID</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>

                    <% for(var i=0;i < data.berequest.length;i++){ %>
                    <tr>
                        <td id="requestId"><%= data.berequest[i].requestId%></td>
                        <td id="requesterRole"><%= data.berequest[i].requesterRole%></td>
                        <td id="resourceOwnerRole"><%= data.berequest[i].resourceOwnerRole%></td>
                        <td id="resourceType"><%= data.berequest[i].resourceType%></td>
                        <td id="resourceId"><%= data.berequest[i].resourceId%></td>
                        <td id="idRequester"><%= data.berequest[i].owner%></td>
                        <td id="idResourceOwner"><%= data.berequest[i].resourceOwner%></td>
                        <td id="status"><%= data.berequest[i].status%></td>
                        <td>
                            <% if(data.berequest[i].status=='Accepted') {%>
                            <form action="/request/reject" method="POST">
                                <input type="hidden" name="requestId" value="<%= data.berequest[i].requestId%>">
                                <input type="hidden" name="requesterRole" value="<%= data.berequest[i].requesterRole%>">
                                <button class="request-button" type="submit">Reject</button>

                            </form>
                            <% } %>
                            <% if(data.berequest[i].status=='New') {%>
                            <form action="/request/accept" method="POST">
                                <input type="hidden" name="requestId" value="<%= data.berequest[i].requestId%>">
                                <input type="hidden" name="requesterRole" value="<%= data.berequest[i].requesterRole%>">
                                <button class="request-button" type="submit">Accept</button>

                            </form>
                            <form action="/request/reject" method="POST">
                                <input type="hidden" name="requestId" value="<%= data.berequest[i].requestId%>">
                                <input type="hidden" name="requesterRole" value="<%= data.berequest[i].requesterRole%>">
                                <button class="request-button" type="submit">Reject</button>

                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
                </table>
                <% } %>
                <h3 class="table-label">Requested</h3>
                <% if(data.request){ %>
                <table>
                    <tr>
                        <th>Request ID</th>
                        <th>Requester Role</th>
                        <th>Resource Owner Role</th>
                        <th>Resource Type</th>
                        <th>Resource ID</th>
                        <th>Requester ID</th>
                        <th>Resource Owner ID</th>
                        <th>Status</th>
                    </tr>

                    <% for(var i=0;i < data.request.length;i++){ %>
                    <tr>
                        <td id="requestId"><%= data.request[i].requestId%></td>
                        <td id="requesterRole"><%= data.request[i].requesterRole%></td>
                        <td id="resourceOwnerRole"><%= data.request[i].resourceOwnerRole%></td>
                        <td id="resourceType"><%= data.request[i].resourceType%></td>
                        <td id="resourceId"><%= data.request[i].resourceId%></td>
                        <td id="idRequester"><%= data.request[i].owner%></td>
                        <td id="idResourceOwner"><%= data.request[i].resourceOwner%></td>
                        <td id="status"><%= data.request[i].status%></td>
                    </tr>
                    <% } %>
                </table>
                <% } %>
            </div>
        </div>
    </div>



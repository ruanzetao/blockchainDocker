    <style>
        .requestForm {
            width: 100%;
            margin-left: 0;
            margin-right: 0;
            padding-left: 0;
            display: inline-block;
            border: 1px solid transparent;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .input--request {
            width: 50%;
            padding: 5px;
            margin: 8px 0;
            margin-left: 2em;
            margin-right: 2em;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        table {
            font-family: arial, sans-serif;
            padding-left: 5%;
            padding-right: 5%;
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 15px;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            display: table-cell;
            width: auto;
        }

        th {
            background: #dddddd;
        }

        .request-button {
            border: 1px solid black;
            padding: 0 15px;
            display: inline-block;
            vertical-align: top;
            min-width: 150px;
        }

        .table-label {
            font-family: arial, sans-serif;
            text-align: center;
            margin: 0 0 10px;
        }
    </style>
